- orders.each do |order|
  .general-cart-item.divider-lg-bottom.pt-0
    %table.table
      %tr
        %td.col-half
          %span.in-grey-600
            = t('.number')
        %td.col-half
          %span.general-order-number
            = link_to order.number, order_path(order)
      %tr
        %td
          %span.in-grey-600
            = t('.created_at')
        %td
          %span.in-grey-900.font-16.fw-300
            = order.creation_date
      %tr
        %td
          %span.in-grey-600
            = t('.status')
        %td
          %span.font-16.fw-300{ class: presenter.add_class_for_status(order) }
            = order.status
      %tr
        %td
          %span.in-grey-600
            = t('.total')
        %td
          %strong.font-16
            = number_to_currency(order.order_total)
