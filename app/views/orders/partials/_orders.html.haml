%table.table.table-hover
  %tr.no-hover
    %th.col-pic.pl-0
      %span.in-grey-600
        = t('.product')
    %th.col-title
    %th.col-price
      %span.in-grey-600
        = t('.price')
    %th.col-quantity
      %span.in-grey-600
        = t('.quantity')
    %th.col-total
      %span.in-grey-600
        = t('.sub_total')
    %th.col-close
  - order_items.each do |item|
    %tr
      %td
        = link_to book_path(item.book) do
          = image_tag(item.book.image_url(:small), class: 'order-img-shadow pull-left')
      %td
        .general-img-wrap-table
      %td
        = link_to item.book.title, book_path(item.book), class: 'title'
      %td
        %span.price.font-16.in-gold-500
          = number_to_currency(item.book.price)
      %td
        .input-group.quantity-controller
          = link_to order_item_path(item, order_item: { decrement: true }),
                    method: :patch, id: 'minus', class: 'input-link' do
            %i.fa.fa-minus.line-heaght-40
          %input.form-control.quantity-input{ type: 'text', value: item.quantity }
          = link_to order_item_path(item, order_item: { decrement: true }),
                    method: :patch, id: 'plus', class: 'input-link' do
            %i.fa.fa-plus.line-heaght-40
      %td
        %span.sub-total.font-16.in-gold-500
          = number_to_currency(item.subtotal_price)
      %td
        = link_to order_item_path(item.id), method: :delete, class: 'close general-cart-close', 'aria-label': 'Close' do
          %span{ 'aria-hidden': 'true' } &times;
