= render 'checkouts/partials/steps'
.text-center.mb-40
  %h3.general-subtitle
    = t('.thank_for_order')
  %p.fw-300
    = t('.confirmation_sent', email: current_user.email)
.row.mb-20
  .col-sm-6
    .visible-xs
      %p.general-order-number.mb-0
        = t('.order_number', number: order.number)
      %p.general-address.mb-30
        = order.creation_date
    %p.general-address
      = "#{current_user.shipping_address.first_name} #{current_user.shipping_address.last_name}"
      %br
      = current_user.shipping_address.address
      %br
      = "#{current_user.shipping_address.city} #{current_user.shipping_address.zip_code}"
      %br
      = current_user.shipping_address.country
      %br
      = t('.phone', phone: current_user.shipping_address.phone)
  .col-sm-6.hidden-xs.text-right
    %p.general-order-number.mb-0
      = t('.order_number', number: order.number)
    %p.general-address.mb-30
      = order.creation_date
.visible-xs
  = render partial: 'checkouts/partials/complete/mobile/items', locals: { order: order }
.hidden-xs.divider-lg.pt-20
  = render partial: 'checkouts/partials/complete/items', locals: { order: order }
.text-center.general-text-right
  = render partial: 'checkouts/partials/order_summary', locals: { order: order, move_right: true }
.text-center
  = link_to t('.back_to_store'), books_path, class: 'btn btn-default mb-20'
