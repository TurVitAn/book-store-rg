- order.order_items.each do |item|
  .general-cart-item.divider-lg.mb-55
    .general-img-wrap-table
      = image_tag(item.book.image_url(:small), class: 'cart-img-shadow')
    %p.title
      = item.book.title
    %p.in-grey-600.fw-300
      = item.book.short_description
    %table.table
      %tr
        %td
          %span.in-grey-600
            = t('.price')
        %td
          %span.font-16.in-gold-500
            = number_to_currency(item.book.price)
      %tr
        %td.vertical-middle
          %span.in-grey-600
            = t('.quantity')
        %td
          %span= item.quantity
      %tr
        %td
          %span.in-grey-600
            = t('.total')
        %td
          %span.font-16.in-gold-500
            = number_to_currency(item.subtotal_price)
