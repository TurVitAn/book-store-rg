= semantic_form_for [:admin, @category], builder: ActiveAdmin::FormBuilder do |f|
  = f.inputs 'Details' do
    = f.input :name, wrapper_html: { class: ('error' if @errors&.messages&.key?(:name)) }
    = render partial: 'admin/shared/errors', locals: { errors: @errors, field: :name }
  = f.actions do
    = f.action :submit
    = f.cancel_link
