= semantic_form_for [:admin, @delivery], builder: ActiveAdmin::FormBuilder do |f|
  = f.inputs 'Details' do
    - %i[kind price from_days to_days].each do |field|
      = f.input field, wrapper_html: { class: ('error' if @errors&.messages&.key?(field)) }
      = render partial: 'admin/shared/errors', locals: { errors: @errors, field: field }
  = f.actions do
    = f.action :submit
    = f.cancel_link
