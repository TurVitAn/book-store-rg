%header.navbar.navbar-default
  .container
    .navbar-header
      %button.navbar-toggle.pull-left{ type: 'button', 'data-toggle': 'collapse', 'data-target': '#navbar' }
        %span.sr-only
        %span.icon-bar
        %span.icon-bar
        %span.icon-bar
      %a.navbar-brand
        = t('.brand')
      = link_to cart_path, class: 'shop-link pull-right visible-xs' do
        %span.shop-icon
          %span.shop-quantity
            = presenter.books_in_order
    = link_to cart_path, class: 'shop-link pull-right hidden-xs' do
      %span.shop-icon
        %span.shop-quantity
          = presenter.books_in_order
    .navbar-collapse.collapse.pl-30#navbar{ 'aria-expanded': 'false' }
      .visible-xs
        = render partial: 'layouts/partials/mobile/navigation', locals: { categories: presenter.categories }
      .hidden-xs
        = render partial: 'layouts/partials/navigation', locals: { categories: presenter.categories }
