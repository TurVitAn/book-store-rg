%main.container.general-main-wrap
  .text-center
    %h3.general-login-title
      = t('.sign_up')
    = render 'devise/shared/omniauth_authorize'
    %p.general-login-text
      = t('devise.or')
  = simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class: 'general-form'}) do |f|
    .form-group.mb-30
      = f.label :email, t('.email')
      = f.input :email,
        required: true,
        autofocus: true,
        label: false,
        placeholder: t('.enter_email'),
        input_html: { autocomplete: :on }
    .form-group.mb-30
      = f.label :password, t('.password')
      = f.input :password,
        required: true,
        label: false,
        hint: ("#{@minimum_password_length} #{t('.characters_minimum')}" if @minimum_password_length),
        placeholder: t('.enter_password'),
        input_html: { autocomplete: :on }
    .form-group.mb-30
      = f.label :password_confirmation, t('.confirm_password')
      = f.input :password_confirmation,
        required: true,
        label: false,
        placeholder: t('.enter_confirm_password'),
        input_html: { autocomplete: :on }
    .text-center
      = f.button :submit, t('.sign_up'), class: 'btn btn-default mb-20'
  = render "devise/shared/links"
