%main.container.general-main-wrap
  .text-center
    %h3.general-login-title
      = t('.resend_confirmation_instructions')
  = simple_form_for(resource, as: resource_name, url: confirmation_path(resource_name), html: { class: 'general-form' }) do |f|
    .form-group.mb-30
    = f.input :email,
        required: true,
        autofocus: true,
        label: false,
        placeholder: t('.enter_email'),
        input_html: { autocomplete: :on }
    .text-center
      = f.button :submit, t('.resend_confirmation_instructions'), class: 'btn btn-default mb-20'
    = render 'devise/shared/links'
