      %h1.mt-res-0
        = @book.title
      %p.lead.small
        = @book.authors_list
      .row
        .col-xs-12.col-md-4
          %p.h1.in-gold-500.mt-10
            = number_to_currency(@book.price, unit: '€')
        .col-xs-5.col-md-3
          .input-group.general-position
            %a.input-link{href: "#"}
              %i.fa.fa-minus.line-height-40
            %input.form-control.quantity-input{type: "text"}
            %a.input-link{href: "#"}
              %i.fa.fa-plus.line-height-40
        .col-xs-7.col-md-5
          %button.btn.btn-default.pull-right.general-position
            = t('buttons.add_to_cart')
      .general-info-wrap.divider-lg
        %p
          = t('book_page.description')
        %p.lead.small.line-height-2
          = @book.description
          %a.in-gold-500.ml-10{href: "#"}
            = t('book_page.links.read_more')
      .general-info-wrap.divider-lg
        .clearfix
          %p.pull-left
            = t('book_page.publication_year')
          %p.lead.small.pull-right
            = @book.published_at
      .general-info-wrap.divider-lg
        .clearfix
          %p.pull-left
            = t('book_page.dimensions')
          %p.lead.small.pull-right
