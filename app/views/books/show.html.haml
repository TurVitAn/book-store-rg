        .mb-40
          .form-group
            %label.control-label.input-label.in-grey-600{for: "title"}
              = t('book_page.title')
            %input#title.form-control{name:"title", type: "text"}
          .form-group
            %label.control-label.input-label.in-grey-600{for: "review"}
              = t('book_page.review')
            %textarea#review.form-control{name:"review", type: "text"}
        .text-right
          %button.btn.disabled.mb-20
            = t('buttons.post')
  .mb-80
