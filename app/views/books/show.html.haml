      .general-info-wrap.divider-lg
        .clearfix
          %p.pull-left
            = t('book_page.materials')
          %p.lead.small.pull-right
            = @book.materials
  .mb-80
    %h3
      = t('book_page.write_review')
    %p.general-info-text
      = t('book_page.score')
    .mb-15
      %i.fa.fa-star.rate-empty
