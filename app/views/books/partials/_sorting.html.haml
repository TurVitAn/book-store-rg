.hidden-xs.clearfix
  .dropdowns.pull-right
    .dropdown.width-240
      %a.dropdown-toggle.lead.small{href: "#", 'data-toggle': "dropdown", role: "button", 'aria-haspopup': "true", 'aria-expanded': "false"}
        = t('catalog_page.sort_by')
        %i.fa.fa-angle-down.dropdown-icon.pull-right
      %ul.dropdown-menu
        - t('catalog_page.sorting').map do |key, value|
          %li
            %a{href: books_path(category_id: current_category, sort_by: key)}
              = value
  %ul.list-inline.pt-10.mb-25.mr-240
    %li.mr-35
      %a.filter-link{href: books_path}
        = t('catalog_page.all')
        %span#all_books.badge.general-badge
          = books_count
    - categories.each do |category|
      %li.mr-35
        %a.filter-link{href: books_path(category_id: category.id), data: { category_id: category.id }}
          = category.name
          %span.badge.general-badge
            = category.books.count
