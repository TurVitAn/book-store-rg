%main.container
  .row
    .col-md-5.mb-40
      .text-center
        %h3.general-subtitle
          = t('.returning_customer')
        = render partial: 'homes/partials/checkout_login/omniauth_authorize'
      = simple_form_for(:user, url: session_path(:user), html: { class: 'general-form' }) do |f|
        .mb-40
          %p.mb-15
            = t('.log_in_with_password')
          = f.input :email
          = f.input :password
          = link_to t('devise.sessions.new.forgot_password'), new_password_path(:user), class: 'help-block in-gold-500'
        = f.button :submit, t('.log_in_with_password')
    .col-md-5.col-md-offset-1.mb-60
      .text-center
        %h3.general-subtitle
          = t('.new_customer')
        = render partial: 'homes/partials/checkout_login/omniauth_authorize'
      = simple_form_for(:user, url: registration_path(:user), html: { class: 'general-form' }) do |f|
        .mb-40
          %p.mb-5
            = t('.quick_register')
          %p.general-info-text.font-12.mb-20
            = t('.create_password_later')
          = f.input :email
        = f.button :submit, t('.continue_to_checkout')
