%main.container
  %h1.general-title-margin
    = t('.settings')
  %ul.nav.clearfix.mb-20{ role: 'tablist' }
    %li.tab-item.active{ role: 'presentation' }
      %a.tab-link{ href: '#address', 'aria-controls': 'address', role: 'tab', 'data-toggle': 'tab' }
        = t('.address')
    %li.tab-item{ role: 'presentation' }
      %a.tab-link{ href: '#privacy', 'aria-controls': 'privacy', role: 'tab', 'data-toggle': 'tab' }
        = t('.privacy')
  .tab-content
    .tab-pane.fade.in.active#address{ role: 'tabpanel' }
      = render partial: 'settings/partials/addresses', locals: { billing_address: @settings_presenter.billing_address,
             shipping_address: @settings_presenter.shipping_address, billing_errors: @settings_presenter.billing_errors,
             shipping_errors: @settings_presenter.shipping_errors, countries: @settings_presenter.countries }
    .tab-pane.fade#privacy{ role: 'tabpanel' }
      = render partial: 'settings/partials/privacy'
