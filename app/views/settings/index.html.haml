%main.container
  %h1.general-title-margin
    = t('.settings')
  %ul.nav.clearfix.mb-20{role: "tablist"}
    %li.tab-item.active{role: "presentation"}
      %a.tab-link{href: "#address", 'aria-controls': "address", role: "tab", 'data-toggle': "tab"}
        = t('.address')
    %li.tab-item{role: "presentation"}
      %a.tab-link{href: "#privacy", 'aria-controls': "privacy", role: "tab", 'data-toggle': "tab"}
        = t('.privacy')
  .tab-content
    #address.tab-pane.fade.in.active{role: "tabpanel"}
      = render partial: 'settings/partials/addresses', locals: { billing_address: @presenter.billing_address, shipping_address: @presenter.shipping_address, billing_errors: @presenter.billing_errors, shipping_errors: @presenter.shipping_errors, countries: @presenter.countries }
    #privacy.tab-pane.fade{role: "tabpanel"}
      = render partial: 'settings/partials/privacy'
